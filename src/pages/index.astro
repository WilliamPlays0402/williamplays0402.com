---
import Layout from '../components/Layout.astro';
import Button from '../components/Button.tsx';
import Card from '../components/Card.tsx';
---

<Layout title="William Plays0402 - Developer">
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-blue-50 to-indigo-100 dark:from-gray-900 dark:to-gray-800 min-h-screen flex items-center">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
      <div class="text-center">
        <h1 class="text-4xl md:text-6xl font-bold text-gray-900 dark:text-gray-100 mb-6">
          Hi, I'm <span class="transition-colors text-blue-600 dark:text-blue-400 hover:text-purple-600 hover:dark:text-purple-400">William</span>
        </h1>
        <p class="text-xl md:text-2xl text-gray-600 dark:text-gray-300 mb-8 max-w-3xl mx-auto">
          A passionate self-taught developer who loves building innovative applications and exploring new technologies.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button href="/about" size="lg">
            Learn More About Me
          </Button>
          <Button href="/contact" variant="outline" size="lg">
            Get In Touch
          </Button>
        </div>
      </div>
    </div>
    
    <!-- Floating animation elements -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute -top-40 -right-40 w-80 h-80 bg-blue-400 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-pulse"></div>
      <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-purple-400 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-pulse" style="animation-delay: 2s;"></div>
    </div>
  </section>

  <!-- Quick Overview Section -->
  <section class="py-20 bg-white dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-gray-100 mb-4">
          What I Do
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
          I specialize in creating modern, responsive web applications using cutting-edge technologies, as well as developing plugins and mods for games I love!
        </p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        <Card title="Frontend Development" client:load>
          <p>Building responsive and interactive user interfaces with React, Vite.js, and modern CSS frameworks.</p>
        </Card>
        
        <Card title="Backend Development" client:load>
          <p>Building robust and scalable server-side applications with Node.js, Express, and modern databases.</p>
        </Card>
        
        <Card title="Game Development" client:load>
          <p>Creating plugins and mods for popular games using Java and C#.</p>
        </Card>
      </div>
    </div>
  </section>

  <!-- Recent Work Teaser -->
  <section class="py-20 bg-gray-50 dark:bg-gray-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-gray-100 mb-4">
          Recent Projects
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
          Check out some of my latest work and experiments.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="bg-white dark:bg-gray-900 rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
          <div class="h-48 bg-gradient-to-br from-blue-500 to-purple-600"></div>
          <div class="p-6">
            <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-2">Homepage / Blog</h3>
            <p class="text-gray-600 dark:text-gray-300 mb-4">This website and blog was proudly made using Astro.</p>
            <Button href="/about#this-website" variant="outline" size="sm">
              View Details
            </Button>
          </div>
        </div>
        
        <!-- <div class="bg-white dark:bg-gray-900 rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
          <div class="h-48 bg-gradient-to-br from-green-500 to-blue-600"></div>
          <div class="p-6">
            <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-2">Project Two</h3>
            <p class="text-gray-600 dark:text-gray-300 mb-4">An e-commerce platform with advanced features.</p>
            <Button href="/about" variant="outline" size="sm">
              View Details
            </Button>
          </div>
        </div> -->
        
        <!-- <div class="bg-white dark:bg-gray-900 rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow md:col-span-2 lg:col-span-1">
          <div class="h-48 bg-gradient-to-br from-purple-500 to-pink-600"></div>
          <div class="p-6">
            <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100 mb-2">Project Three</h3>
            <p class="text-gray-600 dark:text-gray-300 mb-4">A data visualization dashboard with real-time updates.</p>
            <Button href="/about" variant="outline" size="sm">
              View Details
            </Button>
          </div>
        </div> -->
        
        <div class="flex items-center justify-center col-span-full">
          <span class="text-gray-500 dark:text-gray-400 text-lg italic">More coming soon...</span>
        </div>
        
      </div>
      
      <div class="text-center mt-12">
        <Button href="/about" size="lg">
          See All Projects
        </Button>
      </div>
    </div>
  </section>
</Layout>
